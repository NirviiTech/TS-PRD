{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "module": "ESNext",                        // Important for ESM
      "moduleResolution": "Bundler",             // Best for Vite
      "strict": true,
      "esModuleInterop": true,                   // Allow default import of CommonJS modules
      "allowSyntheticDefaultImports": true,      // Allow synthetic default imports
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx"
    },
    "include": ["src"],
    "exclude": ["dist"]
  }
  